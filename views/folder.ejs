<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Files in <%= folderName %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        h1 {
            color: #333;
        }
        h2 {
            color: #555;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            margin: 10px 0;
        }
        a {
            text-decoration: none;
            color: #007bff;
        }
        a:hover {
            text-decoration: underline;
        }
        .back-link {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
        }
        .back-link:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Files in <%= folderName %></h1>

    <h2>Files</h2>
    <ul>
        <% files.forEach(function(file) { %>
            <li>
                <a href="/uploads/<%= folderName %>/<%= file %>"><%= file %></a>
                <!-- <a href="/download/<%= folderName %>/<%= file %>" style="margin-left: 10px;">Download</a> -->
            </li>
        <% }); %>
    </ul>

    <a href="/" class="back-link">Back to Folders</a>
</body>
</html>
